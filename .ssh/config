Include /Users/sarp/.colima/ssh_config
Include config.local

# Global defaults
AddKeysToAgent yes
IdentitiesOnly yes
IdentityFile ~/.ssh/id_ed25519

# Only enable forwarding for this specific host+user combination
Host ubuntu-dev.homelab
    HostName ubuntu-dev.homelab
    ForwardAgent yes

Host jump-host
    RequestTTY no
    HostName jump.sarpshomelab.com
    User sarp

Host gitea.sarpshomelab.com
    RequestTTY no
    HostName gitea.homelab
    ProxyJump jump-host
